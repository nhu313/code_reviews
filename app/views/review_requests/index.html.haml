- content_for(:title) {"My Requests"}
- content_for(:head) {stylesheet_link_tag "reviews", media: "all", "data-turbolinks-track" => true}

%div.section.group
  %div.col.span_1_of_3
    %h2 Open
    %ul
    - @review_requests.open.each do |review_request|
      %li
        = link_to request_link_name(review_request), review_request
  %div.col.span_1_of_3
    %h2 In Progress
    %ul
    - @review_requests.taken.each do |review_request|
      %li
        = link_to request_link_name(review_request), review_request
  %div.col.span_1_of_3
    %h2 Completed
    %ul
    - @review_requests.completed.each do |review_request|
      %li
        = link_to request_link_name(review_request), review_url(review_request)
