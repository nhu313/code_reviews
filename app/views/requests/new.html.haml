= content_for(:title) {"Create Request"}
= form_for @request, url: {action: "create"} do |f|
  - if @request.errors.any?
    #error_explanation
      %h2 #{pluralize(@request.errors.count, "error")} prohibited this project from being saved:
      %ul
        -@request.errors.full_messages.each do |msg|
          %li=msg

  = f.label :title, "Title"
  = f.text_field :title
  %br
  = f.label :url, "URL"
  = f.text_field :url
  %br
  = f.label :description
  = f.text_area :description, :rows => 4
  %br
  = f.submit "Submit"
